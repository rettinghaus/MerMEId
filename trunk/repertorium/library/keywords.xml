<?xml version="1.0" encoding="UTF-8"?>
<classification xmlns="http://www.music-encoding.org/ns/mei" >
    
    <!-- 
        This file defines systematic keywords for the classification of works. 
        The structured keywords are used to create the structured part of the 
        keywords menu at the "Work" tab. 
        They may be used to generate a catalog's hierarchical menu of genres
        like the one in the CNW (http://www.kb.dk/dcm/cnw.html). 
    -->
    
    <!-- Structured classification, 2 levels -->
    
    <termList label="level1">
        <term>Stage music</term>
    </termList>
    <termList label="level2">
        <term>Opera</term>
        <term>Incidental music</term>
        <term>Ballet</term>
    </termList>
    <termList label="level1">
        <term>Instrumental music</term>
    </termList>
    <termList label="level2">
        <term>Symphony</term>
        <term>Concerto</term>
        <term>Other orchestral music</term>
        <term>Chamber music</term>
        <term>Music for one instrument</term>
    </termList>
    <termList label="level1">
        <term>Vocal music</term>
    </termList>
    <termList label="level2">
        <term>Music for vocal soloists and instruments with or without choir</term>
        <term>Choral music with instruments</term>
        <term>A cappella choral music</term>
        <term>Song</term>
    </termList>          
    
    <!-- Unordered supplementary keywords (may also be entered manually in the editor instead)  -->
    
    <termList label="keywords">
        <term>Trio</term>
        <term>Quartet</term>
        <term>Quintet</term>
        <term>Sextet</term>
        <term>Septet</term>
        <term>Octet</term>
        <term>String trio</term>
        <term>String quartet</term>
        <term>String quintet</term>
        <term>Piano trio</term>
        <term>Piano quartet</term>
        <term>Piano quintet</term>
        <term>Wind quartet</term>
        <term>Wind quintet</term>
        <term>Oratorio</term>
        <term>Mass</term>
        <term>Cantata</term>
        <term>Motet</term>
        <term>Lied</term>            
    </termList>          
</classification>

