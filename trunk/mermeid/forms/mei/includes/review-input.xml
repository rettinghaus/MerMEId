<?xml version="1.0" encoding="UTF-8"?>
<h:div xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:xf="http://www.w3.org/2002/xforms"
    xmlns:dcm="http://www.kb.dk/dcm">
    
    <xf:input ref="t:title[@level='a']" class="long">
        <xf:label class="fixed_width">Title <h:a class="help">&#160;?<h:span class="comment">The article's heading (often omitted with newspaper articles)</h:span></h:a></xf:label>
    </xf:input>
    <h:br clear="both"/>
    <xf:input ref="t:title[@level='j']" class="long">
        <xf:label class="fixed_width">Journal <h:a class="help">&#160;?<h:span class="comment">Name of the journal or newspaper</h:span></h:a></xf:label>
    </xf:input>
    <h:br clear="both"/>
    <xf:input ref="t:biblScope[@type='vol']" class="short">
        <xf:label class="fixed_width">Vol.</xf:label>
    </xf:input>
    
    <xf:input ref="t:biblScope[@type='issue']" class="short">
        <xf:label>No. </xf:label>
    </xf:input>
    
    <xf:input ref="t:biblScope[@type='pp']" class="short">
        <xf:label>Pages</xf:label>
    </xf:input>
    <h:br clear="both"/>
    
    <h:span class="fixed_width">Date</h:span>
    <dcm:date-editor ref="t:date"/>
    
    <xf:input ref="t:author" class="medium_long">
        <xf:label class="fixed_width">Author</xf:label>
    </xf:input>
    
    <h:br clear="both"/>
    <xf:input ref="t:ref/@target" class="long">
        <xf:label class="fixed_width">URI to fulltext</xf:label>
    </xf:input>
    
</h:div>